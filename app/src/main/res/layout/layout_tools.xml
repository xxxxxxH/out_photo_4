<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_centerInParent="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/rotateLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_rotate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/rotate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/threed_rotateLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_threerotate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/rotate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3D Rotate"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:ignore="NestedWeights">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_count" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/seekbarcount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12sp"
                    app:isb_indicator_color="@color/seekindicator_color"
                    app:isb_indicator_text_color="@color/white"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="100"
                    app:isb_min="2"
                    app:isb_progress="20"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_tick_marks_type="oval"
                    app:isb_show_tick_texts="true"
                    app:isb_thumb_color="@color/seekthumb_color"
                    app:isb_thumb_size="10dp"
                    app:isb_tick_texts_color="@color/seektick_texts_color"
                    app:isb_tick_texts_size="10dp"
                    app:isb_track_background_color="@color/black"
                    app:isb_track_background_size="2dp"
                    app:isb_track_progress_color="@color/seekprogress_color"
                    app:isb_track_progress_size="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_x" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/seekbarx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    app:isb_indicator_color="@color/seekindicator_color"
                    app:isb_indicator_text_color="@color/white"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="100"
                    app:isb_min="0"
                    app:isb_progress="40"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_tick_marks_type="oval"
                    app:isb_show_tick_texts="true"
                    app:isb_thumb_color="@color/seekthumb_color"
                    app:isb_thumb_size="10dp"
                    app:isb_tick_texts_color="@color/seektick_texts_color"
                    app:isb_tick_texts_size="10dp"
                    app:isb_track_background_color="@color/black"
                    app:isb_track_background_size="2dp"
                    app:isb_track_progress_color="@color/seekprogress_color"
                    app:isb_track_progress_size="2dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_cubebackcolor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/gallery"
            android:tint="@color/black"
            app:tint="@color/black"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>